@model DO_AN.Models.Nhanvien

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        max-width: 100%;
        padding: 0 15px;
    }

    .table-bordered {
        border: 2px solid #000;
    }

        .table-bordered thead th {
            border: 2px solid #000;
            text-align: center;
            font-size: 24px; /* Tăng kích thước chữ */
        }

    a:hover {
        color: inherit !important;
    }
</style>

<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th colspan="2" style="border: 2px solid #000;">Xóa nhân viên</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <h3 style="color:red">Bạn hãy chắc chắn với quyết định của mình. Vì khi xóa dữ liệu sẽ mất hoàn toàn!!!</h3>
                    <div>
                        <hr />
                        <dl class="dl-horizontal">
                            <dt>
                                Tên nhân viên
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Tennv)
                            </dd>
                            <dt>
                                Ngày sinh
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Ngaysinh)
                            </dd>
                            <dt>
                                Giới tính
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Gioitinh)
                            </dd>
                            <dt>
                                Số điện thoại
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Sdt)
                            </dd>
                            <dt>
                                Địa chỉ
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Dc)
                            </dd>
                        </dl>

                        <form asp-action="DeleteConfirmed">
                            <input type="hidden" asp-for="Manv" />
                            <input type="submit" value="Delete" class="btn btn-danger" /> |
                            <a class="btn btn-default" asp-action="Index">Quay về</a>
                        </form>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
