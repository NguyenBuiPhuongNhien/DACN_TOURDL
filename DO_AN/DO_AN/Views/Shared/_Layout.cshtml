            justify-content: space-between;
            align-items: center;
        }

        .chat-body {
            padding: 10px;
            height: 250px;
            overflow-y: auto;
        }

        .chat-footer {
            padding: 10px;
            background-color: #f1f1f1;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .chat-footer input {
            width: 80%;
            padding: 8px;
            border-radius: 5px;
            border: 1px solid #ccc;
        }

        .chat-footer button {
            padding: 8px;
            border-radius: 5px;
            background-color: #007bff;
            color: white;
            border: none;
