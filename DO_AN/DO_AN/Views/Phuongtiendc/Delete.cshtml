@model DO_AN.Models.Phuongtiendc

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        max-width: 100%; /* Thêm đoạn mã này */
        padding: 0 15px; /* Thêm đoạn mã này */
    }

    .table-bordered {
        border: 2px solid #000;
    }

        .table-bordered thead th {
            border: 2px solid #000;
            text-align: center;
            font-size: 24px; /* Tăng kích thước chữ */
        }

    /* Loại bỏ hiệu ứng màu khi hover */
    a:hover {
        color: inherit !important;
    }
</style>

<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th colspan="2" style="border: 2px solid #000;">Xóa phương tiện</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <h3 style="color:red">Bạn hãy cân nhắc trước khi xóa!!</h3>
                    <div>
                        <hr />
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.Tenpt)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Tenpt)
                            </dd>
                        </dl>

                        <form asp-action="DeleteConfirmed">
                            <input type="hidden" asp-for="Mapt" />
                            <input type="submit" value="Delete" class="btn btn-default" /> |
                            <a class="btn btn-default" asp-action="Index">Quay về</a>
                        </form>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
