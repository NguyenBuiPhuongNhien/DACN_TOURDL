@page
@model RegisterModel
@{
    ViewData["Title"] = "Đăng ký";
}
@if (User.IsInRole("Admin"))
{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@* else
{
    Layout = "~/Areas/Identity/Pages/Account/Manage/_LayoutRegister_Login.cshtml";
}
 *@


<style>
    body {
        background-image: url('https://luxtour.com.vn/wp-content/uploads/2021/03/Du-lich-Viet-Nam-7.png');
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
    }

    .register-container {
        background-color: rgba(255, 255, 255, 0.8);
        padding: 20px;
        border-radius: 10px;
    }

    .register-form {
        margin-top: 50px;
    }

    .title-white {
        color: #ffffff;
    }
</style>


<div class="container register-container">
    <div class="row justify-content-center register-form">
        <div class="col-md-6">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="border p-4 rounded">
                <h4 class="mb-4" style="color:navy; text-align: center" >Tạo tài khoản mới</h4>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.FullName" class="form-control" aria-required="true" />
                    <label asp-for="Input.FullName" class="form-label">Họ và Tên</label>
                    <span asp-validation-for="Input.FullName" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Sdt" class="form-control" aria-required="true" />
                    <label asp-for="Input.Sdt" class="form-label">Số điện thoại</label>
                    <span asp-validation-for="Input.Sdt" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Mật khẩu</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.ConfirmPassword" class="form-label">Xác nhận mật khẩu</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                @if (User.IsInRole("Admin"))
                {
                    <div class="form-floating mb-3">
                        <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-control">
                            <option disabled selected> Chọn chức năng</option>
                        </select>
                    </div>
                }
                <div class="d-grid">
                    <button id="registerSubmit" type="submit" class="btn btn-primary btn-lg w-100">Đăng ký</button>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}