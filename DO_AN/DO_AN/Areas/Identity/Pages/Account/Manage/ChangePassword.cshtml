@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<style>
    .change-password-container {
        background-color: rgba(255, 255, 255, 0.8);
        padding: 20px;
        margin-top: 50px;
        border-radius: 10px;
        position: relative; /* Đặt vị trí tương đối để sử dụng pseudo-element */
    }

        .change-password-container::before {
            content: '';
            position: absolute;
            top: -10px;
            left: -10px;
            right: -10px;
            bottom: -10px;
            background-color: rgba(255, 255, 255, 0.9); /* Màu nền mờ để làm nổi bật nội dung */
            z-index: -1; /* Đặt z-index thấp hơn để đẩy nền mờ ra phía sau */
            border-radius: 10px; /* Bo tròn các góc tương ứng với khung chứa nội dung */
        }

        .change-password-container h4 {
            color: navy; /* Màu chữ của tiêu đề */
            margin-bottom: 20px; /* Khoảng cách phía dưới tiêu đề */
            text-align: center; /* Căn giữa tiêu đề */
        }

        .change-password-container form {
            position: relative; /* Đặt vị trí tương đối để điều chỉnh nội dung bên trong */
            background-color: transparent; /* Nền của form trong suốt */
            padding: 20px;
            border-radius: 10px; /* Bo tròn các góc của form */
        }

        .change-password-container .form-group {
            margin-bottom: 20px;
        }

        .change-password-container .btn-default {
            width: 100%;
        }
</style>

<div class="container change-password-container">
    <h4>Thay đổi mật khẩu</h4>
    <partial name="_StatusMessage" for="StatusMessage" />
    <div class="row justify-content-center">
        <div class="col-md-9">
            <form id="change-password-form" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Input.OldPassword">Mật khẩu hiện tại</label>
                    <input asp-for="Input.OldPassword" class="form-control" />
                    <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.NewPassword">Mật khẩu mới</label>
                    <input asp-for="Input.NewPassword" class="form-control" />
                    <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword">Xác nhận mật khẩu mới</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="row d-flex justify-content-center">
                    <div class="col-6 d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary w-100">Cập nhật mật khẩu</button>
                    </div>
                    <div class="col-6 d-flex justify-content-center">
                        <a class="btn btn-primary w-100" asp-area="Identity" asp-page="/Account/Manage/PersonalData">Quay lại</a>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
